<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Search View -->
        <record id="view_loan_application_search" model="ir.ui.view">
            <field name="name">loan.application.search</field>
            <field name="model">loan.application</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="state"/>
                    <field name="loan_amount"/>
                    <field name="interest_rate"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="Sent" name="sent" domain="[('state','=','sent')]"/>
                    <filter string="Credit Check" name="review" domain="[('state','=','review')]"/>
                    <filter string="Approved" name="approved" domain="[('state','=','approved')]"/>
                    <filter string="Rejected" name="rejected" domain="[('state','=','rejected')]"/>
                    <filter string="Signed" name="signed" domain="[('state','=','signed')]"/>
                    <filter string="Canceled" name="cancel" domain="[('state','=','cancel')]"/>
                    <separator/>
                    <filter string="Application Date" name="date_application" date="date_application"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Application Date" name="date_application_group" context="{'group_by': 'date_application'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- List View -->
        <record id="view_loan_application_tree" model="ir.ui.view">
            <field name="name">loan.application.tree</field>
            <field name="model">loan.application</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="date_application"/>
                    <field name="loan_amount" sum="Total"/>
                    <field name="down_payment" sum="Total"/>
                    <field name="interest_rate" avg="Average"/>
                    <field name="loan_term"/>
                    <field name="state" decoration-info="state in ('draft','sent')" 
                           decoration-warning="state == 'review'"
                           decoration-success="state in ('approved','signed')"
                           decoration-danger="state in ('rejected','cancel')"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_loan_application_form" model="ir.ui.view">
            <field name="name">loan.application.form</field>
            <field name="model">loan.application</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_send" string="Send" type="object" 
                                class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_review" string="Start Credit Check" type="object" 
                                class="oe_highlight" invisible="state != 'sent'"/>
                        <button name="action_approve" string="Approve" type="object" 
                                class="oe_highlight" invisible="state != 'review'"/>
                        <button name="action_reject" string="Reject" type="object" 
                                class="btn-danger" invisible="state != 'review'"/>
                        <button name="action_sign" string="Sign" type="object" 
                                class="oe_highlight" invisible="state != 'approved'"/>
                        <button name="action_cancel" string="Cancel" type="object" 
                                invisible="state not in ('draft','sent','review')"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,sent,review,approved,signed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!-- Additional action buttons can be added here -->
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Application Number" readonly="state != 'draft'"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date_application"/>
                                <field name="loan_amount" readonly="state not in ('draft','sent')"/>
                                <field name="down_payment" readonly="state not in ('draft','sent')"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="interest_rate" readonly="state not in ('draft','sent','review')"/>
                                <field name="loan_term" readonly="state not in ('draft','sent')"/>
                                <field name="date_approval" invisible="state not in ('approved', 'signed')"/>
                                <field name="date_signed" invisible="state != 'signed'"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes" name="notes">
                                <field name="notes"/>
                            </page>
                            <page string="Rejection" name="rejection" invisible="state != 'rejected'">
                                <group>
                                    <field name="date_rejection"/>
                                    <field name="rejection_reason"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Window Action -->
        <record id="action_loan_application" model="ir.actions.act_window">
            <field name="name">Loan Applications</field>
            <field name="res_model">loan.application</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_loan_application_search"/>
        </record>
    </data>
</odoo>